<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_worker_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText7"
                    android:hint="Name"
                    android:inputType="text"
                    android:paddingTop="12dp"
                    android:textColor="#000"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:textStyle="normal" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_worker_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000"
                android:layout_below="@+id/text_input_worker_name"
                android:layout_marginTop="10dp">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText8"
                    android:hint="Work"
                    android:inputType="text"
                    android:paddingTop="12dp"
                    android:textColor="#000"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:textStyle="normal" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_worker_phno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000"
                android:layout_below="@+id/text_input_worker_work"
                android:layout_marginTop="10dp">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText9"
                    android:hint="Phone No"
                    android:inputType="number"
                    android:paddingTop="12dp"
                    android:textColor="#000"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:textStyle="normal" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_worker_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000"
                android:layout_below="@+id/text_input_worker_phno"
                android:layout_marginTop="10dp">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText10"
                    android:hint="Cost"
                    android:inputType="number|numberDecimal"
                    android:paddingTop="12dp"
                    android:textColor="#000"
                    android:maxLines="1"
                    android:maxLength="7"
                    android:textStyle="normal" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_worker_per"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000"
                android:layout_below="@+id/text_input_worker_cost"
                android:layout_marginTop="10dp">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText50"
                    android:hint="Profit %"
                    android:inputType="number|numberDecimal"
                    android:paddingTop="12dp"
                    android:textColor="#000"
                    android:maxLines="1"
                    android:maxLength="4"
                    android:textStyle="normal" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Profit"
                android:id="@+id/button_profit"
                android:layout_marginTop="10dp"
                android:textColor="#f16f7d"
                android:padding="16dp"
                android:clickable="true"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_below="@+id/text_input_worker_per" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView30"
                android:layout_marginTop="23dp"
                android:textSize="18sp"
                android:text="  --  "
                android:layout_below="@+id/text_input_worker_per"
                android:layout_alignParentRight="@+id/button_profit"
                android:layout_marginLeft="100dp"
                android:maxLines="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Save"
                android:id="@+id/button_save"
                android:layout_marginTop="10dp"
                android:textColor="#f16f7d"
                android:padding="16dp"
                android:clickable="true"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_below="@+id/button_profit" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cancel"
                android:id="@+id/button_cancel"
                android:layout_marginTop="10dp"
                android:textColor="#f16f7d"
                android:padding="16dp"
                android:clickable="true"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_below="@+id/button_save" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
